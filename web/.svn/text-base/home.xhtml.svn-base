<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:p="http://primefaces.org/ui">
    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="Home"></h:outputText>
        </ui:define>
        <ui:define name="body">
            <h2 align="center">Welcome to eBay Upload Tool</h2>
            
            <h:form>
                <h:commandLink action="/addfiles/addfoldername?faces-redirect=true" value="Add Files"/>
            </h:form>
            
            <h:form>
                <h:commandLink action="/revisefiles/revisefoldername?faces-redirect=true" value="Revise Files"/>
            </h:form>
            
            <h:form>
                <h:commandLink action="/endfiles/endfoldername?faces-redirect=true" value="End Files"/>
            </h:form>
            
            <h:form>
                <h:commandLink action="/allfoldername?faces-redirect=true" value="All Files"/>
            </h:form>
            
            <h:form>
                <h:commandLink rendered="${userType == 'admin'}" action="/logs/List?faces-redirect=true" value="Logs"/>
            </h:form>
            
            <h:form>
                <h:commandLink action="/reports/List?faces-redirect=true" value="Reports"/>
            </h:form>
            <h:form>
                <h:commandLink rendered="${userType == 'admin'}" action="/users/List?faces-redirect=true" value="Users"/>
            </h:form>
        </ui:define>
    </ui:composition>
</html>