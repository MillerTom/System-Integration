<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core">

    <ui:composition template="/template.xhtml">
        <ui:define name="title">
            <h:outputText value="#{bundle.CreateValidEntryTitle}"></h:outputText>
        </ui:define>
        <ui:define name="body">
            <h:panelGroup id="messagePanel" layout="block">
                <h:messages errorStyle="color: red" infoStyle="color: green" layout="table"/>
            </h:panelGroup>
            <h:form>
                <h:panelGrid columns="2">
                    <h:outputLabel value="#{bundle.CreateValidEntryLabel_veId}" for="veId" />
                    <h:inputText id="veId" value="#{validEntryController.selected.veId}" title="#{bundle.CreateValidEntryTitle_veId}" required="true" requiredMessage="#{bundle.CreateValidEntryRequiredMessage_veId}"/>
                    <h:outputLabel value="#{bundle.CreateValidEntryLabel_veName}" for="veName" />
                    <h:inputText id="veName" value="#{validEntryController.selected.veName}" title="#{bundle.CreateValidEntryTitle_veName}" required="true" requiredMessage="#{bundle.CreateValidEntryRequiredMessage_veName}"/>
                    <h:outputLabel value="#{bundle.CreateValidEntryLabel_veCategory}" for="veCategory" />
                    <h:inputText id="veCategory" value="#{validEntryController.selected.veCategory}" title="#{bundle.CreateValidEntryTitle_veCategory}" required="true" requiredMessage="#{bundle.CreateValidEntryRequiredMessage_veCategory}"/>
                    <h:outputLabel value="#{bundle.CreateValidEntryLabel_veDescribtion}" for="veDescribtion" />
                    <h:inputText id="veDescribtion" value="#{validEntryController.selected.veDescribtion}" title="#{bundle.CreateValidEntryTitle_veDescribtion}" />
                </h:panelGrid>
                <br />
                <h:commandLink action="#{validEntryController.create}" value="#{bundle.CreateValidEntrySaveLink}" />
                <br />
                <br />
                <h:commandLink action="#{validEntryController.prepareList}" value="#{bundle.CreateValidEntryShowAllLink}" immediate="true"/>
                <br />
                <br />
                <h:commandLink value="#{bundle.CreateValidEntryIndexLink}" action="/home" immediate="true" />
            </h:form>
        </ui:define>
    </ui:composition>

</html>
